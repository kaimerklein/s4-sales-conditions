{
  "name": "s4-sales-conditions",
  "version": "1.0.0",
  "description": "Side-by-side sales price condition maintenance for SAP S/4 HANA Cloud",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "2.6.0",
    "@sap/cds": "9.7.1",
    "express": "5.2.1",
    "@sap-cloud-sdk/connectivity": "^4",
    "@sap-cloud-sdk/http-client": "^4",
    "@sap-cloud-sdk/resilience": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-test": "^0.4.1",
    "@cap-js/sqlite": "2.1.3",
    "jest": "30.2.0",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "test": "jest --passWithNoTests",
    "watch-pricing-app": "cds watch --open pricingapp/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "cds": {
    "requires": {
      "db": "hana",
      "[development]": {
        "db": "sqlite"
      },
      "API_SLSPRICINGCONDITIONRECORD_SRV": {
        "kind": "odata-v2",
        "model": "srv/external/API_SLSPRICINGCONDITIONRECORD_SRV"
      },
      "YY1_RSM_WORKAGRMNT_VAL_IE_CDS": {
        "kind": "odata-v2",
        "model": "srv/external/YY1_RSM_WORKAGRMNT_VAL_IE_CDS"
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/test/**/*.test.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/gen/"
    ]
  },
  "workspaces": [
    "app/*"
  ]
}
